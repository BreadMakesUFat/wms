<!DOCTYPE html>
<html lang="de">
<meta charset="UTF-8">
<title>WMS</title>
<link rel="icon" type="image/x-icon" href="static/img/">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<link rel="stylesheet" href="{{ url_for('static', filename='css/stock_edit.css') }}">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="{{ url_for('static', filename='js/tmp.js') }}" type="text/javascript"></script>

<body>
<center>
    <h1>{{ org_name ~ ' ' ~ org_id }}</h1>
    <h2>Edit Row</h2>
</center>

    <div class="container mb-5">
        <button><a href="/wms/">Home</a></button>
    </div>

    <div class="container" id="dataTable" width="600">
        <div class="input-group mb-1">
            <span class="input-group-text">Key</span>
            <input type="text" class="form-control" id="key" value="{{ fields['key'] }}" readonly>
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">BON</span>
            <input type="text" class="form-control" id="bon" value="{{ fields['bon'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Article ID</span>
            <input type="text" class="form-control" id="articleID" value="{{ fields['articleID'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Article Description</span>
            <input type="text" class="form-control" id="articleDescription" value="{{ fields['articleDescription'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Article Description Translated</span>
            <input type="text" class="form-control" id="articleDescriptionTranslated" value="{{ fields['articleDescriptionTranslated'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Destination</span>
            <input type="text" class="form-control" id="destination" value="{{ fields['destination'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Recipient</span>
            <input type="text" class="form-control" id="recipient" value="{{ fields['recipient'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Amount</span>
            <input type="text" class="form-control" id="amount" value="{{ fields['amount'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Unit</span>
            <input type="text" class="form-control" id="unit" value="{{ fields['unit'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Unit Translated</span>
            <input type="text" class="form-control" id="unitTranslated" value="{{ fields['unitTranslated'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Date</span>
            <input type="date" class="form-control" id="date" value="{{ fields['date'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Government Code</span>
            <input type="text" class="form-control" id="governmentCode" value="{{ fields['governmentCode'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Price Per Unit</span>
            <input type="text" class="form-control" id="pricePerUnit" value="{{ fields['pricePerUnit'] }}">
        </div>
        <div class="container mb-1">
            <button type="button" class="btn btn-dark" onclick="onSave()">Save</button>
            <button type="button" class="btn btn-dark" onclick="onDelete()">Delete Entry</button>
        </div>
    </div>

       
    <script>

        function onSave() {

            const fields = {
                key: document.getElementById("key").value, 
                bon: document.getElementById("bon").value,
                articleID: document.getElementById("articleID").value,
                articleDescription: document.getElementById("articleDescription").value,
                articleDescriptionTranslated: document.getElementById("articleDescriptionTranslated").value,
                destination: document.getElementById("destination").value,
                recipient: document.getElementById("recipient").value,
                amount: document.getElementById("amount").value,
                unit: document.getElementById("unit").value,
                unitTranslated: document.getElementById("unitTranslated").value,
                date: document.getElementById("date").value,
                governmentCode: document.getElementById("governmentCode").value,
                pricePerUnit: document.getElementById("pricePerUnit").value
            }

            // content of the post request
            const content = {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(fields)
            };

            // send post request to server and display result as popup
            const response = fetch("/wms/edit_deliveries/", content) 
                .then(resp => {
                    if (resp.ok) {
                        alert("Edit was successfull");
                        window.open("/wms/deliveries/", "_self");
                    }
                    else {
                        alert("There was an error!");
                    }
                }
            );
        }

        function onDelete() {
            if (window.confirm("Do you really want to delete the entry? This action can not be undone!")) {

                const fields = {
                    id: document.getElementById("key").value,
                }

                const content = {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(fields)
                };

                // send post request to server and display result as popup
                const response = fetch("/wms/delete_delivery/", content) 
                    .then(resp => {
                        if (resp.ok) {
                            alert("Deletion was successfull");
                            window.open("/wms/deliveries/", "_self");
                        }
                        else {
                            alert("There was an error!");
                        }
                    }
                );
            }
        }

    </script>
</body>
</html> 