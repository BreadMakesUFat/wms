<!DOCTYPE html>
<html lang="de">
<meta charset="UTF-8">
<title>WMS</title>
<link rel="icon" type="image/x-icon" href="static/img/">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<link rel="stylesheet" href="{{ url_for('static', filename='css/index.css') }}">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="{{ url_for('static', filename='js/_.js') }}" type="text/javascript"></script>

<body>
    <h1>{{ org_name ~ ' ' ~ org_id }}</h1>
    <h2>Import csv</h2>
    
    <!-- File upload -->
    <center>
    <div class="text-center w-25 mt-5">
        <label>File:</label>
        <input type="file" accept=".csv" id="csvFileUpload" oninput="onUpload()">
        <input type="submit" value="Submit" onclick="onSubmit()" id="submitButton" disabled="true">
    </div>
    </center>

    <!-- CSV Preview -->
    <center>
    <div class="text-center mt-5">
        <p id="csvPreviewTable"></p>
    </div>
    </center>
    
    
       
    <script>

        let fileObj = null;

        function onUpload() {
            fileObj = document.getElementById("csvFileUpload").files[0];
            if (fileObj) {
                alert("file found!"); // TODO: preview/feedback for data

                // enable submit button
                document.getElementById("submitButton").disabled = false;

                // preview first 10 rows of csv file
                table = document.getElementById("csvPreviewTable");
                let reader = new FileReader();
                reader.readAsText(fileObj);
                reader.onload = () => {
                    let csv = reader.result;
                    table.innerHTML = csv.split("\n")[0];
                }
                
            }
            else {
                alter("There was an error loading the file!");
            }
        }

        function onSubmit() {

            // check if file has been uploaded and disable button if not
            if (!fileObj){
                document.getElementById("submitButton").disabled = true;
            }

            // content of the post request
            const content = {
                method: "POST",
                headers: {
                    'Content-Type': 'text/csv'
                },
                body: fileObj
            };

            // send post request to server and display result as popup
            const response = fetch("/wms/import", content) 
                .then(resp => {
                    if (resp.ok) {
                        alert("The import was successfull!");
                    }
                    else {
                        alert("An error occured!");
                    }
                }
            );
        }

    </script>
</body>
</html> 