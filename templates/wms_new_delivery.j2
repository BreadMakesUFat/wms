<!DOCTYPE html>
<html lang="de">
<meta charset="UTF-8">
<title>WMS</title>
<link rel="icon" type="image/x-icon" href="static/img/">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<link rel="stylesheet" href="{{ url_for('static', filename='css/index.css') }}">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="{{ url_for('static', filename='js/_.js') }}" type="text/javascript"></script>

<body>
    
    <h1>{{ org_name ~ ' ' ~ org_id }}</h1>
    <h2>New delivery</h2>

    <div class="container mb-5">
        <button id="btn btn-dark"><a href="/wms/">Home</a></button>
    </div>
    
    <!-- New delivery form -->
    <center>
        <div id="container-sm">
        <form>
            <div class="form-group">
                <label for="inputBON">BON/Article ID</label>
                <input type="text" class="form-control" id="inputBON">
            </div>

            <div class="form-group">
                <label for="inputDestination">Destination</label>
                <input type="text" class="form-control" id="inputDestination">
            </div>

            <div class="form-group">
                <label for="inputNoRecipient">No. of recipient</label>
                <input type="text" class="form-control" id="inputNoRecipient">
            </div>

            <div class="form-group">
                <label for="inputAmount">Amount</label>
                <input type="text" class="form-control" id="inputAmount">
                <select class="form-select" id="inputUnit" aria-label="Unit Selection">
                    <option value="Pieces" selected>Pieces</option>
                    <option value="Boxes">Boxes</option>
                    <option value="KG">KG</option>
                </select>
            </div>
            
        </form>
         <button type="submit" class="btn btn-primary" id="buttonSubmit" onclick="onSubmitDelivery()">Ok</button>
        </div>
    
    </center>  

    <script>

        function onSubmitDelivery() {

            // TODO: read values and submit entry
            let bon = document.getElementById("inputBON").value; 
            let destination = document.getElementById("inputDestination").value; 
            let recipient = document.getElementById("inputNoRecipient").value; 
            let amount = document.getElementById("inputAmount").value; 
            let unit = document.getElementById("inputUnit").value;

            if (!bon || !destination) {
                return;
            }

            const fields = {
                b_bon: bon, 
                b_dest: destination, 
                b_rec: recipient,
                b_amount: amount, 
                b_unit: unit
            };

            const content = {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(fields)
            };

            const response2 = fetch("/wms/new_delivery", content) 
                .then(resp => {
                    if (resp.ok) {
                        alert("The request was successfull!");
                    }
                    else {
                        alert("An error occured!");
                    }
                }
            );
        }
    
    </script> 
    
</body>
</html> 