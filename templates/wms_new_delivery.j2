<!DOCTYPE html>
<html lang="de">
<meta charset="UTF-8">
<title>WMS</title>
<link rel="icon" type="image/x-icon" href="static/img/">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<link rel="stylesheet" href="{{ url_for('static', filename='css/index.css') }}">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="{{ url_for('static', filename='js/_.js') }}" type="text/javascript"></script>

<body>
    
    <h1>{{ org_name ~ ' ' ~ org_id }}</h1>
    <h2>New delivery</h2>

    <div class="container mb-5">
        <button id="btn btn-dark"><a href="/wms/">Home</a></button>
    </div>
    
    <!-- New delivery form -->
    <center>
        <div class="container" width="600">
        <form>
            <div class="input-group mb-1">
                <span class="input-group-text">BON/Article ID</span>
                <input type="text" class="form-control" id="id">
            </div> 

            <div class="input-group mb-1">
                <span class="input-group-text">Destination</span>
                <input type="text" class="form-control" id="destination">
            </div> 

            <div class="input-group mb-1">
                <span class="input-group-text">No. of recipients</span>
                <input type="text" class="form-control" id="recipient">
            </div> 

            <div class="input-group mb-1">
                <span class="input-group-text">Amount</span>
                <input type="text" class="form-control" id="amount">
            </div> 

            <div class="input-group mb-1">
                <span class="input-group-text">Unit</span>
                <select class="form-select" id="unit">
                    <option value="STÜCK">STÜCK</option>
                </select>
            </div>

            
        </form>
         <button type="submit" class="btn btn-primary" id="buttonSubmit" onclick="onSubmitDelivery()">Ok</button>
        </div>
    
    </center>  

    <script>

        function onSubmitDelivery() {

            // TODO: read values and submit entry
            const id = document.getElementById("id").value; 
            const destination = document.getElementById("destination").value; 
            const recipient = document.getElementById("recipient").value; 
            const amount = document.getElementById("amount").value; 
            const unit = document.getElementById("unit").value;

            if (!id || !destination || !amount) {
                return;
            }

            const fields = {
                id: id, 
                destination: destination, 
                recipient: recipient,
                amount: amount, 
                unit: unit
            };

            const content = {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(fields)
            };

            const response2 = fetch("/wms/new_delivery/", content) 
                .then(resp => {
                    if (resp.ok) {
                        alert("The request was successfull!");
                        window.open("/wms/deliveries/", "_self");
                    }
                    else {
                        alert("An error occured! The BON/Article ID might not exist in the database.");
                    }
                }
            );
        }
    
    </script> 
    
</body>
</html> 