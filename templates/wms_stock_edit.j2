<!DOCTYPE html>
<html lang="de">
<meta charset="UTF-8">
<title>WMS</title>
<link rel="icon" type="image/x-icon" href="static/img/">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<link rel="stylesheet" href="{{ url_for('static', filename='css/stock_edit.css') }}">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="{{ url_for('static', filename='js/tmp.js') }}" type="text/javascript"></script>

<body>
    <h1>{{ org_name ~ ' ' ~ org_id }}</h1>
    <h2>Edit Row</h2>

    <div class="container mb-5">
        <button><a href="/wms/">Home</a></button>
    </div>

    <div class="container" id="dataTable" width="600">
        <div class="input-group mb-1">
            <span class="input-group-text">Article ID</span>
            <input type="text" class="form-control" id="ArticleID" value="{{ fields['articleID'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Description</span>
            <input type="text" class="form-control" id="ArticleDescription" value="{{ fields['description'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">BON</span>
            <input type="text" class="form-control" id="BON" value="{{ fields['bon'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">BO Description</span>
            <input type="text" class="form-control" id="BODescription" value="{{ fields['boDescription'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Best before</span>
            <input type="date" class="form-control" id="BestBefore" value="{{ fields['bestBefore'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Amount</span>
            <input type="text" class="form-control" id="Amount" value="{{ fields['amount'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Location</span>
            <input type="text" class="form-control" id="Location" value="{{ fields['loc'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Weight</span>
            <input type="text" class="form-control" id="Weight" value="{{ fields['weight'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Unit</span>
            <input type="text" class="form-control" id="Unit" value="{{ fields['unit'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Price</span>
            <input type="text" class="form-control" id="Price" value="{{ fields['price'] }}">
        </div>
        <div class="input-group mb-1">
            <span class="input-group-text">Date</span>
            <input type="date" class="form-control" id="Date" value="{{ fields['date'] }}">
        </div>
        <div class="container mb-1">
            <button type="button" class="btn btn-dark" onclick="onSave()">Save</button>
            <button type="button" class="btn btn-dark" onclick="onDelete()">Delete Entry</button>
        </div>
    </div>

       
    <script>

        function onSave() {

            const fields = {
                articleID: document.getElementById("ArticleID").value,
                articleDescription: document.getElementById("ArticleDescription").value,
                bon: document.getElementById("BON").value,
                boDescription: document.getElementById("BODescription").value,
                bestBefore: document.getElementById("BestBefore").value,
                amount: document.getElementById("Amount").value,
                loc: document.getElementById("Location").value,
                weight: document.getElementById("Weight").value,
                unit: document.getElementById("Unit").value,
                price: document.getElementById("Price").value,
                date: document.getElementById("Date").value,
            }

            // content of the post request
            const content = {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(fields)
            };

            // send post request to server and display result as popup
            const response = fetch("/wms/edit_stock/", content) 
                .then(resp => {
                    if (resp.ok) {
                        alert("Edit was successfull");
                        window.open("/wms/stock/", "_self");
                    }
                    else {
                        alert("There was an error!");
                    }
                }
            );
        }

        function onDelete() {
            if (window.confirm("Do you really want to delete the entry? This action can not be undone!")) {

                const fields = {
                    bon: document.getElementById("BON").value,
                }

                const content = {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(fields)
                };

                // send post request to server and display result as popup
                const response = fetch("/wms/delete/", content) 
                    .then(resp => {
                        if (resp.ok) {
                            alert("Deletion was successfull");
                            window.open("/wms/stock/", "_self");
                        }
                        else {
                            alert("There was an error!");
                        }
                    }
                );
            }
        }

    </script>
</body>
</html> 